{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>ReservationId</th>
                <td>{{ reservation.ReservationId }}</td>
            </tr>
            <tr>
                <th>ReservationAdress</th>
                <td>{{ reservation.ReservationAdress }}</td>
            </tr>
            <tr>
                <th>NumberGuests</th>
                <td>{{ reservation.NumberGuests }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ reservation.StartDate ? reservation.StartDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ reservation.EndDate ? reservation.EndDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HostName</th>
                <td>{{ reservation.HostName }}</td>
            </tr>
            <tr>
                <th>GuestName</th>
                <td>{{ reservation.GuestName }}</td>
            </tr>
            <tr>
                <th>NumberNights</th>
                <td>{{ reservation.NumberNights }}</td>
            </tr>
            <tr>
                <th>PaymentTotal</th>
                <td>{{ reservation.PaymentTotal }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
